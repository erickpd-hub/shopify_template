{{ 'component-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <!-- Brand Column -->
      <div class="footer__column">
        <div class="footer__brand">
          <div class="footer__logo">
            {% if section.settings.footer_logo != blank %}
              <img 
                src="{{ section.settings.footer_logo | image_url: width: 150 }}"
                alt="{{ shop.name }}"
                width="150"
                loading="lazy"
              >
            {% else %}
              <div class="logo-icon">
                <span>{{ section.settings.logo_letter }}</span>
              </div>
              <span class="logo-name">{{ section.settings.store_name | default: shop.name }}</span>
            {% endif %}
          </div>
          
          {% if section.settings.footer_description != blank %}
            <p class="footer__description">{{ section.settings.footer_description }}</p>
          {% endif %}

          <!-- Contact Info -->
          <div class="footer__contact">
            {% if section.settings.email != blank %}
              <div class="footer__contact-item">
                {% render 'icon-email' %}
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
              </div>
            {% endif %}
            
            {% if section.settings.phone != blank %}
              <div class="footer__contact-item">
                {% render 'icon-phone' %}
                <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
              </div>
            {% endif %}
            
            {% if section.settings.address != blank %}
              <div class="footer__contact-item">
                {% render 'icon-location' %}
                <span>{{ section.settings.address }}</span>
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Dynamic Columns from Blocks -->
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
          <div class="footer__column" {{ block.shopify_attributes }}>
            <h4 class="footer__title">{{ block.settings.heading }}</h4>
            <ul class="footer__list">
              {% for i in (1..6) %}
                {% assign link_label = 'link_label_' | append: i %}
                {% assign link_url = 'link_' | append: i %}
                {% if block.settings[link_label] != blank %}
                  <li>
                    <a href="{{ block.settings[link_url] }}">
                      {{ block.settings[link_label] }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </p>
      
      {% if section.settings.show_payment_icons %}
        <div class="footer__payment">
          {% render 'payment-icons' %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

<style>
  .footer {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(15, 23, 42, 0.8);
    border-top: 1px solid rgba(251, 191, 36, 0.2);
    margin-top: 5rem;
    padding: 3rem 0;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .footer__content {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__content {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer__brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer__description {
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
  }

  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }

  .footer__contact-item svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .footer__contact-item a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer__contact-item a:hover {
    color: #fbbf24;
  }

  .footer__title {
    color: white;
    margin-bottom: 1rem;
    font-size: 1rem;
  }

  .footer__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__list a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s;
    font-size: 0.875rem;
  }

  .footer__list a:hover {
    color: #fbbf24;
  }

  .footer__bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer__copyright {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }
</style>

