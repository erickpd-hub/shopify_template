<section class="main-product section-spacing">
  <div class="container">
    <div class="main-product__grid">
      <div class="main-product__image-wrapper">
        <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" class="main-product__image" width="{{ product.featured_image.width }}" height="{{ product.featured_image.height }}">
      </div>
      <div class="main-product__content">
        <h1 class="main-product__title">{{ product.title }}</h1>
        <div class="main-product__price">
          {{ product.price | money }}
        </div>
        <div class="main-product__description">
          {{ product.description }}
        </div>

        {%- form 'product', product, id: "product-form", class: "main-product__form" -%}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" name="add" class="main-product__add-to-cart-button">
            Add to Cart
          </button>
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

<style>
  .main-product__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .main-product__grid {
      grid-template-columns: 1fr 1fr;
      align-items: center;
    }
  }

  .main-product__image-wrapper {
    width: 100%;
  }

  .main-product__image {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }

  .main-product__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .main-product__price {
    font-size: 1.5rem;
    color: #fbbf24;
    margin-bottom: 1.5rem;
  }

  .main-product__description {
    margin-bottom: 2rem;
    color: #a1a1aa;
  }

  .main-product__form {
    display: flex;
  }

  .main-product__add-to-cart-button {
    background-color: #fbbf24;
    color: #18181b;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .main-product__add-to-cart-button:hover {
    background-color: #f59e0b;
  }
</style>

{% schema %}
{
  "name": "Main Product",
  "settings": []
}
{% endschema %}
