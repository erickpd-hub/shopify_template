{{ 'component-header.css' | asset_url | stylesheet_tag }}

<header class="header" data-header>
  <nav class="header__nav">
    <div class="container">
      <div class="header__wrapper">
        <!-- Logo -->
        <div class="header__logo">
          {% if section.settings.logo != blank %}
            <a href="{{ routes.root_url }}" class="header__logo-link">
              <img 
                src="{{ section.settings.logo | image_url: width: 150 }}"
                alt="{{ shop.name }}"
                width="150"
                height="auto"
                loading="lazy"
              >
            </a>
          {% else %}
            <a href="{{ routes.root_url }}" class="header__logo-link header__logo-text">
              <div class="logo-icon">
                <span>{{ section.settings.logo_letter }}</span>
              </div>
              <span class="logo-name">{{ section.settings.store_name | default: shop.name }}</span>
            </a>
          {% endif %}
        </div>

        <!-- Desktop Navigation - Seasons -->
        <div class="header__menu header__menu--desktop">
          {% for block in section.blocks %}
            {% if block.type == 'season_link' %}
              <a 
                href="{{ block.settings.link }}" 
                class="header__menu-item"
                {{ block.shopify_attributes }}
              >
                <span class="header__menu-emoji">{{ block.settings.emoji }}</span>
                {{ block.settings.title }}
              </a>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Additional Links -->
        <div class="header__menu header__menu--desktop header__menu--additional">
          {% for block in section.blocks %}
            {% if block.type == 'nav_link' %}
              <a 
                href="{{ block.settings.link }}" 
                class="header__menu-item"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.title }}
              </a>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Actions -->
        <div class="header__actions">
          <a href="{{ routes.search_url }}" class="header__icon" aria-label="Search">
            {% render 'icon-search' %}
          </a>
          
          <a href="{{ routes.account_url }}" class="header__icon" aria-label="Account">
            {% render 'icon-account' %}
          </a>

          <button 
            type="button" 
            class="header__icon header__cart-toggle"
            aria-label="Cart"
            data-cart-toggle
          >
            {% render 'icon-cart' %}
            <span class="header__cart-count" data-cart-count>{{ cart.item_count }}</span>
          </button>

          <button 
            type="button" 
            class="header__icon header__mobile-toggle"
            aria-label="Menu"
            data-mobile-menu-toggle
          >
            {% render 'icon-menu' %}
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div class="header__mobile-menu" data-mobile-menu>
        {% for block in section.blocks %}
          {% if block.type == 'season_link' %}
            <a 
              href="{{ block.settings.link }}" 
              class="header__mobile-item"
              {{ block.shopify_attributes }}
            >
              <span class="header__menu-emoji">{{ block.settings.emoji }}</span>
              {{ block.settings.title }}
            </a>
          {% endif %}
        {% endfor %}
        
        {% for block in section.blocks %}
          {% if block.type == 'nav_link' %}
            <a 
              href="{{ block.settings.link }}" 
              class="header__mobile-item"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.title }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(15, 23, 42, 0.8);
    border-bottom: 1px solid rgba(251, 191, 36, 0.2);
  }

  .header__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
    gap: 2rem;
  }

  .header__logo-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(to bottom right, #fbbf24, #d97706);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: #0f172a;
  }

  .logo-name {
    font-size: 1.25rem;
    color: white;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .header__menu {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  @media (min-width: 1024px) {
    .header__menu--desktop {
      display: flex;
    }
  }

  .header__menu-item {
    padding: 0.5rem 1rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .header__menu-item:hover {
    color: white;
    background: rgba(255, 255, 255, 0.05);
  }

  .header__menu-emoji {
    margin-right: 0.5rem;
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header__icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
    position: relative;
    text-decoration: none;
  }

  .header__icon:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .header__icon svg {
    width: 20px;
    height: 20px;
  }

  .header__cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    width: 20px;
    height: 20px;
    background: #fbbf24;
    color: #0f172a;
    border-radius: 50%;
    font-size: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }

  .header__cart-count:empty {
    display: none;
  }

  .header__mobile-toggle {
    display: flex;
  }

  @media (min-width: 1024px) {
    .header__mobile-toggle {
      display: none;
    }
  }

  .header__mobile-menu {
    display: none;
    padding: 1rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header__mobile-menu.active {
    display: block;
  }

  .header__mobile-item {
    display: block;
    padding: 0.75rem 1rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .header__mobile-item:hover {
    color: white;
    background: rgba(255, 255, 255, 0.05);
  }

  @media (min-width: 1024px) {
    .header__mobile-menu {
      display: none !important;
    }
  }
</style>

