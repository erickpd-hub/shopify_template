{{ 'section-season-grid.css' | asset_url | stylesheet_tag }}

<section class="season-grid section-spacing">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p class="section-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="season-grid__wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'season' %}
          <a 
            href="{{ block.settings.link }}" 
            class="season-card"
            style="background: linear-gradient(to bottom right, {{ block.settings.gradient_from }}, {{ block.settings.gradient_to }});"
            {{ block.shopify_attributes }}
          >
            <div class="season-card__gradient"></div>
            <div class="season-card__content">
              <div class="season-card__emoji">{{ block.settings.emoji }}</div>
              <h3 class="season-card__title">{{ block.settings.title }}</h3>
              <p class="season-card__description">{{ block.settings.description }}</p>
              <div class="season-card__cta">
                <span>Explorar</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .section-spacing {
    padding: 5rem 1rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .section-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.125rem;
    max-width: 42rem;
    margin: 0 auto;
  }

  .season-grid__wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .season-grid__wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .season-grid__wrapper {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .season-card {
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    border: 1px solid rgba(251, 191, 36, 0.1);
    padding: 2rem;
    transition: all 0.3s;
    text-decoration: none;
    display: block;
  }

  .season-card:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(251, 191, 36, 0.3);
    box-shadow: 0 20px 25px -5px rgba(251, 191, 36, 0.1);
    transform: translateY(-8px);
  }

  .season-card__gradient {
    position: absolute;
    inset: 0;
    background: inherit;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .season-card:hover .season-card__gradient {
    opacity: 1;
  }

  .season-card__content {
    position: relative;
    z-index: 10;
  }

  .season-card__emoji {
    font-size: 3.75rem;
    margin-bottom: 1rem;
  }

  .season-card__title {
    color: white;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .season-card__description {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1rem;
  }

  .season-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #fbbf24;
    font-weight: 500;
  }

  .season-card:hover .season-card__cta svg {
    transform: translateX(4px);
  }

  .season-card__cta svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s;
  }
</style>

