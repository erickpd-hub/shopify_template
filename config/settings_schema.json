      {
        "type": "select",
        "id": "image_ratio",
        "label": "Image Aspect Ratio",
        "options": [
          {
            "value": "portrait",
            "label": "Portrait (3:4)"
          },
          {
            "value": "square",
            "label": "Square (1:1)"
          },
          {
            "value": "landscape",
            "label": "Landscape (4:3)"
          }
